          scaled test = (scaled) atoi (v);
          if (test > 16383) {
            errid = "value is too large";
          } else if (test < -16383) {
            errid = "value is too small";
          } else {
            set_internal_from_scaled_int (equiv (p), test * unity);
          }
        } else {
          errid = "value has the wrong type";
        }
      } else {
        errid = "variable is not an internal";
      }
    }
