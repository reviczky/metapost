        if (loc > limit) {
          @<Decry the missing string delimiter and |goto restart|@>;
        }
        str_room ((size_t) (loc - k));
        do {
          append_char (mp->buffer[k]);
          incr (k);
        } while (k != loc);
        set_cur_mod_str(mp_make_string (mp));
      }
      incr (loc);
      set_cur_cmd(mp_string_token);
      return;
