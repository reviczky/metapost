  class = mp->char_class[c];
  switch (class) {
  case digit_class:
    mp_scan_numeric_token(mp, (c - '0'));
    return;
    break;
  case period_class:
    class = mp->char_class[mp->buffer[loc]];
    if (class > period_class) {
