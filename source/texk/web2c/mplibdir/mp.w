    }
    if (number_equal(xp, x) && number_equal(yp, y)) {
      number_clone (x, p_nextnext->x_coord);
      number_clone (y, p_nextnext->y_coord);
    }
    set_number_from_substraction(arg1, x, xp);
    set_number_from_substraction(arg2, y, yp);
