static void mp_new_randoms (MP mp) {
  int k;        /* index into |randoms| */
  fraction x;   /* accumulator */
  for (k = 0; k <= 23; k++) {
    x = mp->randoms[k] - mp->randoms[k + 31];
    if (x < 0)
      x = x + fraction_one;
    mp->randoms[k] = x;
  }
  for (k = 24; k <= 54; k++) {
    x = mp->randoms[k] - mp->randoms[k - 24];
    if (x < 0)
      x = x + fraction_one;
    mp->randoms[k] = x;
  }
  mp->j_random = 54;
}

