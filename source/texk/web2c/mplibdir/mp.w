    if (q->info == cur_sym() && q->info_mod == cur_sym_mod()) {
      cur_data = q->value_data;
      cur_data_mod = q->value_mod;
      set_cur_cmd(mp_relax);
      break;
    }
    q = q->link;
  }
}


