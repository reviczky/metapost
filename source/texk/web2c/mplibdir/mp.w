        res = mp_out (number_to_double(xo)) - mp_out (number_to_double(xi));
        if (res < -180.0)
          res += 360.0;
        else if (res > 180.0)
          res -= 360.0;
      }
    }
  }
  free_number (deltax);
  free_number (deltay);
  free_number (xi);
  free_number (xo);
  free_number (xm);
  set_number_from_scaled (ret, double2angle (res));
