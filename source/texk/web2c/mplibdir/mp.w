  number_halfp (arc1);
  number_substract (arc1, v002);
  number_half (arc1);
  set_number_from_addition(arc1, v002, arc1);

  set_number_from_addition(arc, v2, tmp);
  number_halfp (arc);
  number_substract (arc, v022);
  number_half (arc);
  set_number_from_addition(arc, v022, arc);

