static void mp_t_next (MP mp) {
  int old_status;       /* saves the |scanner_status| */
  integer old_info;     /* saves the |warning_info| */
  while (cur_cmd() <= mp_max_pre_command) {
    if (cur_cmd() == mp_mpx_break) {
