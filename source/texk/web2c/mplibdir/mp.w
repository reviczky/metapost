void mp_str_scan_file (MP mp, mp_string s);

@ @c
void mp_str_scan_file (MP mp, mp_string s) {
  size_t p, q;  /* current position and stopping point */
  mp_begin_name (mp);
  p = 0;
  q = s->len;
  while (p < q) {
    if (!mp_more_name (mp, *(s->str + p)))
      break;
    incr (p);
  }
  mp_end_name (mp);
}


